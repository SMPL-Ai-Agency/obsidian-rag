{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "es2022",
      "esnext.asynciterable",
      "esnext.disposable",
      "dom"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ]
}
